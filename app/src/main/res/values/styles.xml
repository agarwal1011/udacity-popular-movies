<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleHeading" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextStyleYear" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextStyleLength" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyleRating" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="ButtonStyleFavorite" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TextStyleAuthor" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="TextStyleReviewContent" parent="TextAppearance.AppCompat.Caption">
    </style>


</resources>
